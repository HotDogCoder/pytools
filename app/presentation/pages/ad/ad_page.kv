<AdPage>:
    name: "AD"
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "AD Screen"
            font_size: 32

        Button:
            text: "Go to Ad"
            font_size: 32
            on_release:
                app.root.current = "MAIN"
                root.manager.transition.direction = "right"